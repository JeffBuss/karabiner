<?xml version="1.0"?>
<root>
    <item>
        <name>TURBOCAPSLOCK</name>
        <identifier>private.turbocapslock</identifier>

        <!--  -->
        <!-- OS X System Actions -->
        <!--  -->

        <!-- left -->
        <autogen>
            __KeyToKey__
            KeyCode::J, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT
        </autogen>

        <!-- down -->
        <autogen>
            __KeyToKey__
            KeyCode::K, ModifierFlag::FN,
            KeyCode::CURSOR_DOWN
        </autogen>

        <!-- right -->
        <autogen>
            __KeyToKey__
            KeyCode::L, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT
        </autogen>

        <!-- up -->
        <autogen>
            __KeyToKey__
            KeyCode::I, ModifierFlag::FN,
            KeyCode::CURSOR_UP
        </autogen>

        <!-- delete -->
        <autogen>
            __KeyToKey__
            KeyCode::H, ModifierFlag::FN,
            KeyCode::DELETE
        </autogen>

        <!-- skip to beginning of line -->
        <autogen>
            __KeyToKey__
            KeyCode::Y, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L
        </autogen>

        <!-- skip to end of line -->
        <autogen>
            __KeyToKey__
            KeyCode::P, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L
        </autogen>

        <!-- skip to beginning of last word -->
        <autogen>
            __KeyToKey__
            KeyCode::U, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L
        </autogen>

        <!-- skip to end of next word -->
        <autogen>
            __KeyToKey__
            KeyCode::O, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L
        </autogen>

        <!--  -->
        <!-- Spectacle Window Management -->
        <!--  -->

        <!-- split right -->
        <autogen>
            __KeyToKey__
            KeyCode::D, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split up -->
        <autogen>
            __KeyToKey__
            KeyCode::W, ModifierFlag::FN,
            KeyCode::CURSOR_UP, ModifierFlag::OPTION_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split down -->
        <autogen>
            __KeyToKey__
            KeyCode::S, ModifierFlag::FN,
            KeyCode::CURSOR_DOWN, ModifierFlag::OPTION_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split left -->
        <autogen>
            __KeyToKey__
            KeyCode::A, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split upper-left quadrant -->
        <autogen>
            __KeyToKey__
            KeyCode::Q, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split lower-right quadrant -->
        <autogen>
            __KeyToKey__
            KeyCode::C, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L
        </autogen>

        <!-- split upper-right quadrant -->
        <autogen>
            __KeyToKey__
            KeyCode::E, ModifierFlag::FN,
            KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- split lower-left quadrant -->
        <autogen>
            __KeyToKey__
            KeyCode::Z, ModifierFlag::FN,
            KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L
        </autogen>

        <!--  -->
        <!-- Atom Editor -->
        <!--  -->

        <!-- move line up -->
        <autogen>
            __KeyToKey__
            KeyCode::QUOTE, ModifierFlag::FN,
            KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- move line down -->
        <autogen>
            __KeyToKey__
            KeyCode::SLASH, ModifierFlag::FN,
            KeyCode::CURSOR_DOWN, ModifierFlag::CONTROL_L, | ModifierFlag::COMMAND_L
        </autogen>

        <!-- select entire line -->
        <autogen>
            __KeyToKey__
            KeyCode::SEMICOLON, ModifierFlag::FN,
            KeyCode::L, ModifierFlag::COMMAND_L
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::G, ModifierFlag::FN,
            KeyCode::K, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::F19,
            KeyCode::FN
        </autogen>
    </item>
</root>
